.forty-five
.new-job
  = form_for @job do |f|

    = f.label :title
    = f.text_field :title

    = f.label :description
    = f.text_field  :description

    = f.label :instructions
    = f.text_field  :instructions

    = f.label :address
    = f.text_field  :address

    = f.label :date_time
    = f.datetime_select  :date_time

    = f.label :postcode
    = f.text_field  :postcode

    = f.submit

