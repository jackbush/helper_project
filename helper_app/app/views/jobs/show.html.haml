%h2= @job.title

%h2= link_to 'I CAN HELP', new_job_bid_path(@job)

%h3 DESCRIPTION
%p= @job.description

%h3 INSTRUCTIONS
%p= @job.instructions

%h4
  posted by
  = link_to @job.poster.username, profile_path(@job.poster)

%h4
  applied for by
  - @job.applicants.each do |applicant|
    = link_to applicant.username, profile_path(applicant)

.page-nav
  = link_to 'EDIT', edit_job_path
  = link_to 'BACK', jobs_path