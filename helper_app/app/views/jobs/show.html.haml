%h2= @job.title

%h4
  posted by
  = link_to @job.poster.username, profile_path(@job.poster)

%h4 YOU HAVE APPLIED FOR THIS JOB
%h4 YOU HAVE BEEN SELECTED FOR THIS JOB

%h2= link_to 'I CAN HELP', new_job_bid_path(@job)

%h3 DESCRIPTION
%p= @job.description

%h3 MAP
#job-show-map

%h3 INSTRUCTIONS
%p= @job.instructions

%h3 APPLICATIONS
%table
  %tr
    %td User
    %td Note
    %td Select
  - @job.bids.each do |bid|
    %tr
      %td= link_to bid.applicant.username, profile_path(bid.applicant)
      %td= bid.note
      %td
        %button{'data-id' => @job.id, 'data-helper-id' => bid.applicant.id} CHOOSE

.page-nav
  = link_to 'EDIT', edit_job_path
  = link_to 'BACK', jobs_path